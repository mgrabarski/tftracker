<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_route_lp_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                tools:text="Lp." />

            <android.support.v4.widget.Space
                android:layout_width="@dimen/default_margin"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/item_route_hour_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="hour" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_route_tracking_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="tracking time" />

            <TextView
                android:id="@+id/item_route_counter_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Location counter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_route_start_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="tracking time" />

            <TextView
                android:id="@+id/item_route_end_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Location counter" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>